<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}EventHub{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>

<header class="page-header">
    {% block top_header_content %}
        <div class="top-header flex">
                <div class="logo-container">
                    <a href="{{ path('app_home') }}">
                        <img src="{{ asset('images/logo.png') }}" alt="HubEvent Logo" class="navbar-logo">
                    </a>
                </div>
            <div class="header-right-menu flex">
                <div class="navbar-links" id="navbarLinks">
    <a href="{{ path('app_home') }}" class="nav-link">Accueil</a>

    {% if app.user %}
        <a href="{{ path('app_profile') }}" class="nav-link">Profil</a>

        {# Lien visible uniquement pour les admins #}
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_admin') }}" class="nav-link">Administration</a>
        {% endif %}

        <a href="{{ path('app_logout') }}" class="btn-logout">Se déconnecter</a>
    {% else %}
        <a href="{{ path('app_login') }}" class="btn-login">Connexion</a>
        <a href="{{ path('app_register') }}" class="btn-register">Inscription</a>
    {% endif %}
</div>

                <button class="menu-burger flex">
                    <img src="{{ asset('Images/icones/burger.png') }}" alt="Menu burger" class="burger-icon">
                </button>
            </div>
        </div>
    {% endblock %}

{% block bottom_header_content %}
    <div class="bottom-header">
        <div class="search-bar-container">
            <input type="text" placeholder="Rechercher un événement" class="search-input">
        </div>
    </div>
{% endblock %}
</header>

    {% block body %}{% endblock %}
    
    <footer class="footer">
        <div class="container text-center">
            <p class="mb-2">Mentions légales - Politique de confidentialité - Cookies</p>
            <p class="mb-0">© 2025 - HubEvent</p>
        </div>
    </footer>
        <script>
    document.addEventListener('DOMContentLoaded', function() {
        const burgerBtn = document.querySelector('.menu-burger');
        const navLinks = document.querySelector('.navbar-links');

        if (burgerBtn && navLinks) {
            burgerBtn.addEventListener('click', () => {
                navLinks.classList.toggle('active');
                burgerBtn.classList.toggle('open');
            });
        }
    });
</script>
    {% block javascripts %}{% endblock %}

</body>
</html>
