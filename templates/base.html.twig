<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}EventHub{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body>

<header class="page-header">
    {% block top_header_content %}
        <div class="top-header flex">
                <div class="logo-container">
                    <a href="{{ path('app_home') }}">
                        <img src="{{ asset('images/logo.png') }}" alt="HubEvent Logo" class="navbar-logo">
                    </a>
                </div>
            <div class="header-right-menu flex">
    {# Menu pour les écrans mobiles #}
    <div class="navbar-links" id="navbarLinks">
        <button class="close-menu">×</button>
        <a href="{{ path('app_home') }}" class="nav-link">Accueil</a>
        {% if app.user %}
            <a href="{{ path('app_profile') }}" class="nav-link">Profil</a>
            <a class="nav-link create-event-link" href="{{ path('app_create_event') }}">Créer un événement</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_admin') }}" class="nav-link admin-link">Administration</a>
            {% endif %}
            <a href="{{ path('app_logout') }}" class="nav-link logout-link">Se déconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="nav-link btn-login">Connexion</a>
            <a href="{{ path('app_register') }}" class="nav-link btn-register">Inscription</a>
        {% endif %}
    </div>

    {# Menu pour les grands écrans (PC) #}
    <div class="navbar-links-desktop">
        <a href="{{ path('app_home') }}" class="nav-link">Accueil</a>
        {% if app.user %}
            <a href="{{ path('app_profile') }}" class="nav-link">Profil</a>
            <a class="nav-link create-event-link" href="{{ path('app_create_event') }}">Créer un événement</a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_admin') }}" class="nav-link admin-link">Administration</a>
            {% endif %}
            <a href="{{ path('app_logout') }}" class="nav-link logout-link">Se déconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="nav-link btn-login">Connexion</a>
            <a href="{{ path('app_register') }}" class="nav-link btn-register">Inscription</a>
        {% endif %}
    </div>

    <button class="menu-burger flex">
        <img src="{{ asset('Images/icones/burger.png') }}" alt="Menu burger" class="burger-icon">
    </button>
</div>
        </div>
    {% endblock %}

{% block bottom_header_content %}
    <div class="bottom-header">
    {# Formulaire de recherche #}
    <div class="search-bar-container">
        <form action="{{ path('app_home') }}" method="GET">
            <input type="text" 
                   class="search-input" 
                   name="search" 
                   placeholder="Rechercher un événement, une ville, etc."
                   value="{{ app.request.get('search') }}">
            <button type="submit" class="search-btn">Rechercher</button>
        </form>
    </div>
</div>
{% endblock %}
</header>

    {% block body %}{% endblock %}
    
    <footer class="footer">
        <div class="container text-center">
            <p class="mb-2">Mentions légales - Politique de confidentialité - Cookies</p>
            <p class="mb-0">© 2025 - HubEvent</p>
        </div>
    </footer>
        <script>
    document.addEventListener('DOMContentLoaded', function() {
        const burgerBtn = document.querySelector('.menu-burger');
        const navLinks = document.querySelector('.navbar-links');
        const closeBtn = document.querySelector('.close-menu'); // Sélectionnez le nouveau bouton

        if (burgerBtn && navLinks && closeBtn) {
            // Ouvre le menu
            burgerBtn.addEventListener('click', () => {
                navLinks.classList.add('active');
            });
            // Ferme le menu
            closeBtn.addEventListener('click', () => {
                navLinks.classList.remove('active');
            });
        }
    });
</script>
    {% block javascripts %}{% endblock %}

</body>
</html>
