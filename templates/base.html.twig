<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}EventHub{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>

<header class="page-header">
    {% block top_header_content %}
        <div class="top-header flex">
                <div class="logo-container">
                    <a href="{{ path('app_home') }}">
                        <img src="{{ asset('images/logo.png') }}" alt="HubEvent Logo" class="navbar-logo">
                    </a>
                </div>
            <div class="header-right-menu flex">
                <nav class="navbar-links flex">
                    <a class="nav-link active" href="{{ path('app_home') }}">Accueil</a>
                    <a class="nav-link" href="{% if app.user %}{{ path('app_profile') }}{% else %}{{ path('app_login') }}{% endif %}">Profil</a>
                </nav>
                <button class="menu-burger flex">
                    <img src="{{ asset('Images/icones/burger.png') }}" alt="Menu burger" class="burger-icon">
                </button>
            </div>
        </div>
    {% endblock %}

{% block bottom_header_content %}
    <div class="bottom-header">
        <div class="search-bar-container">
            <input type="text" placeholder="Rechercher un événement" class="search-input">
        </div>
    </div>
{% endblock %}
</header>

    {% block body %}{% endblock %}
    
    <footer class="footer">
        <div class="container text-center">
            <p class="mb-2">Mentions légales - Politique de confidentialité - Cookies</p>
            <p class="mb-0">© 2025 - HubEvent</p>
        </div>
    </footer>
<script src="{{ asset('js/searchbar.js') }}"></script>
</body>
</html>
